    <script>
        lucide.createIcons();
        gsap.registerPlugin(ScrollTrigger);

        const menuTrigger = document.getElementById('menu-trigger');
        const menuClose = document.getElementById('menu-close');
        const mobileMenu = document.getElementById('mobile-menu');

        menuTrigger.addEventListener('click', () => {
            mobileMenu.classList.add('active');
            document.body.style.overflow = 'hidden';
        });

        menuClose.addEventListener('click', () => {
            mobileMenu.classList.remove('active');
            document.body.style.overflow = 'auto';
        });

        function navigate(target) {
            mobileMenu.classList.remove('active');
            document.body.style.overflow = 'auto';
            
            if (target === 'home') {
                showView('home');
            } else if (target === 'services') {
                showView('services');
            } else {
                showView('home');
                setTimeout(() => {
                    const el = document.querySelector(target);
                    if (el) el.scrollIntoView({ behavior: 'smooth' });
                }, 500);
            }
        }

        function showView(viewName) {
            const home = document.getElementById('home-view');
            const services = document.getElementById('services-view');
            window.scrollTo({ top: 0, behavior: 'smooth' });
            
            if (viewName === 'services') {
                gsap.to(home, { opacity: 0, duration: 0.3, onComplete: () => {
                    home.classList.add('view-hidden');
                    services.classList.remove('view-hidden');
                    gsap.fromTo(services, { opacity: 0, y: 15 }, { opacity: 1, y: 0, duration: 0.5 });
                }});
            } else {
                gsap.to(services, { opacity: 0, duration: 0.3, onComplete: () => {
                    services.classList.add('view-hidden');
                    home.classList.remove('view-hidden');
                    gsap.fromTo(home, { opacity: 0, y: 15 }, { opacity: 1, y: 0, duration: 0.5 });
                }});
            }
        }

        // --- CAROUSEL LOGIC ---
        let currentSlide = 0;
        const slides = document.querySelectorAll('.carousel-slide');
        const prevBtn = document.getElementById('carousel-prev');
        const nextBtn = document.getElementById('carousel-next');
        const timerBar = document.getElementById('carousel-timer-bar');
        
        const SLIDE_DURATION = 4000; // 4 seconds
        let startTime;
        let animationFrame;

        function updateSlide(direction = 'next') {
            slides[currentSlide].classList.remove('active');
            
            if (direction === 'next') {
                currentSlide = (currentSlide + 1) % slides.length;
            } else {
                currentSlide = (currentSlide - 1 + slides.length) % slides.length;
            }
            
            slides[currentSlide].classList.add('active');
            resetTimer();
        }

        function resetTimer() {
            cancelAnimationFrame(animationFrame);
            startTime = Date.now();
            animateTimer();
        }

        function animateTimer() {
            const now = Date.now();
            const elapsed = now - startTime;
            const progress = Math.min((elapsed / SLIDE_DURATION) * 100, 100);
            
            timerBar.style.width = `${progress}%`;
            
            if (progress < 100) {
                animationFrame = requestAnimationFrame(animateTimer);
            } else {
                updateSlide('next');
            }
        }

        nextBtn.addEventListener('click', () => updateSlide('next'));
        prevBtn.addEventListener('click', () => updateSlide('prev'));

        window.onload = () => {
            resetTimer();

            const tl = gsap.timeline();
            tl.from(".hero-nav-pill", { y: -15, opacity: 0, duration: 0.8, delay: 0.3, ease: "power3.out" });
            tl.from("#hero-content h1, #hero-content p, #hero-content .flex", { y: 20, opacity: 0, duration: 1, stagger: 0.15, ease: "power4.out" }, "-=0.4");
            
            gsap.utils.toArray('section').forEach(section => {
                gsap.from(section, {
                    scrollTrigger: {
                        trigger: section,
                        start: "top 90%",
                    },
                    opacity: 0,
                    y: 20,
                    duration: 0.8,
                    ease: "power2.out"
                });
            });
        };
    </script>
</body>
</html>
